# Company Service - copy to .env and set values

# Required: PostgreSQL (sync URL for Alembic; app uses asyncpg internally)
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/company_db

# Required: API Gateway injects this; service rejects requests without it
INTERNAL_API_KEY=your-trusted-internal-api-key

# M-PESA integration
MPESA_BASE_URL=https://m-pesa.techtutor.co.ke
COMPANY_CALLBACK_URL=https://api.myapp.com/mpesa/callback

# RabbitMQ (events)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Optional
SERVICE_NAME=company-service
